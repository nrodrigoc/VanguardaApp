package vanguardamanager;

import java.util.Scanner;

import vanguardamanager.display.UIManager;

public class Launcher {
	
	public static UIManager GUI;
	private static ObjectManager objectManager;
	
	public static void main(String[] args) {
		Contador fila = objectManager.getFila();
		
		GUI = new UIManager();
		
		fila.iniciarFila();
		
		while(fila.isOpen()) {
			System.out.println("Tamanho atual da fila: " + fila.getQueueSize());
			System.out.println("Ficha atual: " + fila.getFichaAtual());
			
			/*Scanner input = new Scanner(System.in);*/
			String s = GUI.getCommand();
			
			switch(s.toLowerCase()) {
				case "add": fila.adicionarPessoa(); break;
				case "prox": fila.proximaPessoa(); break;
				case "fechar": fila.fecharFila(); break;
				default: break;
			
			}	
			
		}
		System.out.println("Fim do programa!");
		
	}
	
	public ObjectManager getObjectManager() {
		return objectManager;
	}
}
