package gerenciadordefila;

import java.util.ArrayList;

public class Contador{
	
	private boolean rodando;
	
	private static ArrayList<Integer> fila;
	private int fichaAtual;
	
	public Contador() {
		rodando = false;
		fila = new ArrayList<>();
		fila.add(1);
		fichaAtual = 1;
	}
	
	public void iniciarFila() {	
		rodando = true;
		fila.add(fichaAtual);
	}
	
	public void adicionarPessoa() {
		fichaAtual++;
		fila.add(fichaAtual);
	}
	
	public void proximaPessoa() {
		fila.remove(0);
	}
	
	public int getFichaAtual() {
		if(fila.isEmpty()) {
			return 0;
		}
		return fila.get(0);
	}
	
	/*Retorna true se o programa nao foi fechado*/
	public boolean isOpen() {
		return rodando;
	}
	
	public void fecharFila() {
		rodando = false;
	}
	
}
